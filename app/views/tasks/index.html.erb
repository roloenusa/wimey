<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Calendar </h3>
  </div>
  <div class="panel-body">
    <p>
      <div id='calendar' class="<%= calendar_user_tasks_path(user_id: @user.id) %>"></div>
    <p>
  </div>
</div>


<h1>Listing tasks</h1>




<table>
  <thead>
    <tr>
      <th>Assigned</th>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user_email %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>

<% content_for :javascript_ready do %>
  <%= javascript_include_tag 'fullcalendar/calendar' %>
  <%= javascript_include_tag 'fullcalendar/fullcalendar' %>
  <%= javascript_include_tag 'fullcalendar/gcal' %>
<% end %>

<% content_for :stylesheet_ready do %>
  <%= stylesheet_link_tag :fullcalendar %>
<% end %>