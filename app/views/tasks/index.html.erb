<h1>Listing tasks</h1>

<div id='calendar'></div>


<table>
  <thead>
    <tr>
      <th>Created by</th>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.created_by %></td>
        <td><%= task.user_id %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>

<% content_for :javascript_ready do %>
  <%= javascript_include_tag 'fullcalendar/calendar' %>
  <%= javascript_include_tag 'fullcalendar/fullcalendar' %>
  <%= javascript_include_tag 'fullcalendar/gcal' %>
<% end %>

<% content_for :stylesheet_ready do %>
  <%= stylesheet_link_tag :fullcalendar %>
<% end %>